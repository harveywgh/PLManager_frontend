<Page x:Class="WPFModernVerticalMenu.Pages.SelectSupplier"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFModernVerticalMenu.Pages"
      xmlns:viewModels="clr-namespace:WPFModernVerticalMenu.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SelectSupplier">

    <Page.DataContext>
        <viewModels:SelectSupplierViewModel/>
    </Page.DataContext>

    <Grid>
        <!-- En-tête -->
        <Border CornerRadius="5" Background="Transparent">
            <TextBlock Text="Tableau de bord" FontSize="30" Foreground="{DynamicResource PrimaryTextColor}" FontWeight="Bold"
                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>

        <!-- Contenu principal -->
        <Border CornerRadius="10" Background="{DynamicResource FourthBackgroundColor}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="450">

                <!-- Titre -->
                <TextBlock Text="Choix du fournisseur" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Margin="0,20,0,20"/>

                <!-- Zone de recherche -->
                <Border CornerRadius="10" Background="#F8F9FC" Padding="10" Width="400">
                    <Grid>
                        <!-- Champ de recherche avec placeholder -->
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 FontSize="14" Padding="5"
                                 VerticalAlignment="Center"
                                 Width="360"
                                 Background="Transparent"
                                 Foreground="#404040" 
                                 BorderBrush="Transparent"
                                 SelectionBrush="Transparent"
                                 HorizontalAlignment="Left"
                                 TextAlignment="Left"
                                 VerticalContentAlignment="Center"
                                 FontWeight="Light"
                                 Name="SearchBox"
                                 TextChanged="SearchBox_TextChanged"/>

                        <!-- Placeholder simulé -->
                        <TextBlock Text="Rechercher un fournisseur"
                                   FontSize="14"
                                   Foreground="#A0A7B2"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Margin="10,0,0,0"
                                   IsHitTestVisible="False"
                                   x:Name="PlaceholderTextBlock"/>

                        <!-- Icône de recherche -->
                        <Button Width="30" Height="30" Background="Transparent" BorderThickness="0"
                                HorizontalAlignment="Right" VerticalAlignment="Center">
                            <Viewbox Width="16" Height="16">
                                <Path Data="{StaticResource searchIcon}" Fill="#A0A7B2"/>
                            </Viewbox>
                        </Button>
                    </Grid>
                </Border>

                <!-- Liste des fournisseurs -->
                <Border BorderBrush="Transparent" 
                        BorderThickness="2" 
                        CornerRadius="1" 
                        Background="Transparent"
                        ClipToBounds="True" 
                        Margin="0,10,0,0" 
                        Width="400">
                    <ScrollViewer Height="300" 
                                  Width="400"
                                  HorizontalScrollBarVisibility="Disabled"
                                  VerticalScrollBarVisibility="Hidden"
                                  ClipToBounds="True"
                                  PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
                        <ListBox ItemsSource="{Binding FilteredSuppliers}" 
                                 SelectedItem="{Binding SelectedSupplier, Mode=TwoWay}"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Loaded="ListBox_Loaded"
                                 SelectionChanged="OnSupplierSelected"
                                 ItemContainerStyle="{StaticResource {x:Type ListBoxItem}}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#A0A7B2" 
                                            BorderThickness="0" 
                                            Padding="10" 
                                            CornerRadius="0"
                                            Background="Transparent">
                                        <Grid Width="329">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="30"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{Binding Name}" 
                                                       FontSize="16" 
                                                       VerticalAlignment="Center" 
                                                       Grid.Column="0" 
                                                       Foreground="{DynamicResource TextFifthColor}"/>

                                            <Viewbox Width="18" Height="18" Grid.Column="1" HorizontalAlignment="Right">
                                                <Path Data="{StaticResource arrowIcon}" Fill="#404040"/>
                                            </Viewbox>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </Border>

                <!-- Boutons de navigation -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,0">
                    <!-- Bouton Précédent -->
                    <Button Content="Précédent"
                            Style="{StaticResource SquareButtonStyle}"
                            Background="#404040"
                            Width="125" Height="40"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Margin="0,0,200,0"
                            HorizontalAlignment="Left"
                            Click="GoBack_Click"/>

                    <!-- Bouton Suivant -->
                    <Button Content="Suivant"
                            Style="{StaticResource SquareButtonStyle}"
                            Width="125" Height="40"
                            FontSize="14"
                            FontWeight="SemiBold"
                            HorizontalAlignment="Right"
                            Click="GoToCSVSettings_Click"
                            IsEnabled="{Binding IsSupplierSelected}"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Page>

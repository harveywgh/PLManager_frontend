<Window x:Class="PLManager.Windows.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wfi="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
        Title="Éditeur CSV"
        Height="600"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#E6E8EA">

    <Window.Resources>
        <!-- 🎨 Style local pour boutons gris -->
        <Style x:Key="LocalGrayButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#B0B0B0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D5D5D5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#C0C0C0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#EEEEEE"/>
                                <Setter Property="Foreground" Value="#AAAAAA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ✅ Boutons -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,10"
                    Grid.Row="0">
            <Button Content="Importer"
                    Width="90"
                    Height="30"
                    Click="ImportCsv_Click"
                    Style="{StaticResource LocalGrayButtonStyle}"/>
            <Button Content="Enregistrer"
                    Width="100"
                    Height="30"
                    Click="SaveToCurrentFile_Click"
                    Style="{StaticResource LocalGrayButtonStyle}"/>
            <Button Content="Enregistrer sous"
                    Width="130"
                    Height="30"
                    Click="SaveAsCsv_Click"
                    Style="{StaticResource LocalGrayButtonStyle}"/>
        </StackPanel>

        <!-- ✅ Grille CSV -->
        <wfi:WindowsFormsHost x:Name="GridHost"
                              Grid.Row="2"
                              Margin="10"
                              MinHeight="300"
                              VerticalAlignment="Stretch"
                              HorizontalAlignment="Stretch"/>

        <Border x:Name="ToastContainer"
        Background="White"
        BorderBrush="Black"
        BorderThickness="1"
        CornerRadius="6"
        Padding="8,4"
        Visibility="Collapsed"
        HorizontalAlignment="Right"
        VerticalAlignment="Bottom"
        Margin="0,0,20,20"
        Opacity="0.95"
        Panel.ZIndex="99">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="✔"
                   FontWeight="Bold"
                   Margin="0,0,6,0"
                   Foreground="Black"
                   FontSize="14"/>
                <TextBlock x:Name="ToastNotification"
                   Text="Fichier enregistré !"
                   Foreground="Black"
                   FontSize="14"
                   VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

<Page x:Class="WPFModernVerticalMenu.Pages.Extractor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:viewModels="clr-namespace:WPFModernVerticalMenu.ViewModels"
      xmlns:controls="clr-namespace:WPFModernVerticalMenu.Controls"
      mc:Ignorable="d" 
      Title="Extraction PL"
      FontFamily="Corbel">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/MainStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Page.DataContext>
        <viewModels:PackingListViewModel/>
    </Page.DataContext>

    <Grid>
        <Border CornerRadius="10" Background="{DynamicResource FourthBackgroundColor}" Margin="30,0,30,30">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Importer une Packing List" FontSize="20" Foreground="{DynamicResource TextFifthColor}" 
                           FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,40"/>

                <!-- Zone de glisser-déposer cliquable -->
                <Button Style="{StaticResource PopupButtonStyle}" 
                Command="{Binding SelectFileCommand}"
                Width="527" Height="300"  Background="Transparent" BorderThickness="0">
                    <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="100"
                    Background="#fbfbff"
                    Width="600" Height="350" HorizontalAlignment="Center"
                    VerticalAlignment="Center" AllowDrop="True"
                    Drop="Border_Drop" DragEnter="Border_DragEnter" DragLeave="Border_DragLeave">
                        <!-- Utilisation d'une Grid pour éviter l'erreur de multiple Child -->
                        <Grid>
                            <Rectangle Width="527" Height="300" 
                       Stroke="Gray" 
                       StrokeThickness="1.5"
                       RadiusX="10" RadiusY="10"
                       StrokeDashArray="4 4"/>

                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Path Data="{DynamicResource clouduploadIcon}" 
                      Width="57" 
                      Height="44" 
                      Fill="{DynamicResource PrimaryBlueColor}" 
                      Stretch="Fill"
                      Margin="0,0,0,0"/>
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock FontSize="16" FontWeight="SemiBold" TextAlignment="Center">
                        <LineBreak/>
                        <Run Text="Déposer la Packing List ou " Foreground="{DynamicResource TextFifthColor}"/>
                        <Run Text="parcourir" 
                             Foreground="{DynamicResource PrimaryBlueColor}" 
                             TextDecorations="Underline"/>
                                    </TextBlock>
                                    <TextBlock Foreground="Gray" FontSize="13" TextAlignment="Center">
                        Formats supportés : XLS, XLSX
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Button>


                <!-- ✅ Conteneur avec bordure -->
                <Grid Margin="0, 5, 0, 0">
                    <Border BorderBrush="{DynamicResource PrimaryIconColor}" BorderThickness="0" CornerRadius="5" Padding="4">
                        <Grid Margin="0, 0, 0, 0" Visibility="{Binding IsFileSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <!-- Icône à gauche -->
                                <ColumnDefinition Width="*"/>
                                <!-- Nom du fichier au centre (occupe tout l'espace dispo) -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- Bouton supprimer à droite -->
                            </Grid.ColumnDefinitions>

                            <!-- ✅ Icône du fichier (À gauche) -->
                            <Viewbox Width="20" Height="20" VerticalAlignment="Center" Grid.Column="0">
                                <Path Data="{StaticResource fileIcon}" Fill="{DynamicResource TextFourthColor}"/>
                            </Viewbox>

                            <!-- ✅ Nom du fichier (Au centre) -->
                            <TextBlock Text="{Binding FileName}" FontSize="15" Foreground="{DynamicResource TextFourthColor}" FontWeight="DemiBold" 
                                VerticalAlignment="Center" Margin="10,0,10,0" Grid.Column="1"/>

                            <!-- ✅ Bouton pour supprimer le fichier (À droite) avec effet Hover -->
                            <Button Style="{StaticResource RemoveButtonStyle}"
                            Width="30" Height="30"
                            Command="{Binding RemoveFileCommand}"
                            Grid.Column="2"/>
                        </Grid>
                    </Border>
                </Grid>



    <!-- Bouton stylisé -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Contenu principal -->
                    <StackPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <!-- Contenu de ta page -->
                    </StackPanel>

                    <!-- Bouton Suivant en bas à droite -->
                    <Button Content="Suivant"
                        Style="{StaticResource SquareButtonStyle}"
                        Width="200" Height="40"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Margin="0, 25, 0, 0"
                        Grid.Row="1" 
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Command="{Binding GoToNextPageCommand}"
                        IsEnabled="{Binding IsFileUploaded}"/>
                </Grid>

            </StackPanel>
        </Border>
    </Grid>

</Page>

<Page x:Class="PLManager.Pages.CSVSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Paramétrage du CSV"
      FontFamily="Corbel">

    <Grid>
        <Border Background="{DynamicResource FourthBackgroundColor}" CornerRadius="10" Padding="30" Margin="30,0,30,30">
            <Grid Margin="0,-0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="Réglages du fournisseur"
                   FontSize="22" FontWeight="Bold"
                   Height="35"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Center"
                   Margin="0"
                   Padding="0, 0, 0, 0"
                   Foreground="{DynamicResource TextFifthColor}" Grid.ColumnSpan="2"/>

                <!-- Première colonne -->
                <StackPanel Grid.Column="0" Margin="0" VerticalAlignment="Center" HorizontalAlignment="Center">

                    <!-- Pays d'Origine -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Pays d'Origine" FontSize="16" FontWeight="SemiBold" Margin="0,15,0,0" Foreground="{DynamicResource TextFifthColor}"/>
                        <TextBlock Text="(requis)" FontSize="12" Foreground="{DynamicResource TextFifthColor}" FontWeight="Bold" Height="14"/>
                    </StackPanel>
                    <ComboBox x:Name="cbCountry"
                              Width="200" Height="50"
                              HorizontalAlignment="Left"
                              ItemsSource="{Binding CountryList}"
                              Style="{StaticResource BlueDropdownStyle}"
                              PreviewMouseLeftButtonDown="ComboBox_PreviewMouseLeftButtonDown"
                              SelectionChanged="cbCountry_SelectionChanged"/>

                    <!-- Transitaire -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Transitaire" FontSize="16" FontWeight="SemiBold" Margin="0,15,0,5" Foreground="{DynamicResource TextFifthColor}"/>
                        <TextBlock Text="(requis)" FontSize="12" Foreground="{DynamicResource TextFifthColor}" FontWeight="Bold" Margin="5,0,0,0" Height="14"/>
                    </StackPanel>
                    <ComboBox x:Name="cbForwarder"
                              Width="200" Height="50"
                              HorizontalAlignment="Left"
                              ItemsSource="{Binding ForwarderList}"
                              Style="{StaticResource BlueDropdownStyle}"
                              PreviewMouseLeftButtonDown="ComboBox_PreviewMouseLeftButtonDown"
                              SelectionChanged="cbForwarder_SelectionChanged"/>

                    <!-- Importateur -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="16" FontWeight="SemiBold" Margin="0,15,0,5" Foreground="{DynamicResource TextFifthColor}"><Run Text="Paramètre "/><Run Language="fr-fr" Text="1"/></TextBlock>
                    </StackPanel>
                    <ComboBox x:Name="cbImporter"
                              Width="200" Height="50"
                              HorizontalAlignment="Left"
                              ItemsSource="{Binding ImporterList}"
                              SelectedItem="{Binding SelectedImporter, Mode=TwoWay}"
                              Style="{StaticResource BlueDropdownStyle}"
                              PreviewMouseLeftButtonDown="ComboBox_PreviewMouseLeftButtonDown"
                              SelectionChanged="cbImporter_SelectionChanged"/>

                    <!-- Archivage -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="16" FontWeight="SemiBold" Margin="0,15,0,5" Foreground="{DynamicResource TextFifthColor}"><Run Text="Paramètre "/><Run Language="fr-fr" Text="2"/></TextBlock>
                    </StackPanel>
                    <ComboBox x:Name="cbArchive"
                              Width="200" Height="50"
                              HorizontalAlignment="Left"
                              ItemsSource="{Binding ArchiveList}"
                              Style="{StaticResource BlueDropdownStyle}"
                              PreviewMouseLeftButtonDown="ComboBox_PreviewMouseLeftButtonDown"
                              SelectionChanged="cbArchive_SelectionChanged"/>
                </StackPanel>

                <!-- Deuxième colonne -->
                <StackPanel Grid.Column="1" Margin="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <!-- Packaging -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="16" HorizontalAlignment="Left" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="{DynamicResource TextFifthColor}" Text="Paramètre 3"/>
                    </StackPanel>
                    <ComboBox x:Name="cbPackaging"
                              Width="200" Height="50"
                              HorizontalAlignment="Left"
                              ItemsSource="{Binding PackagingList}"
                              Style="{StaticResource BlueDropdownStyle}"
                              SelectionChanged="cbPackaging_SelectionChanged"/>

                    <!-- Packaging Type -->
                    <TextBlock FontSize="16" HorizontalAlignment="Left" FontWeight="SemiBold" Margin="0,15,0,5" Foreground="{DynamicResource TextFifthColor}"><Run Text="Paramètre "/><Run Language="fr-fr" Text="4"/></TextBlock>
                    <ComboBox x:Name="cbPackagingType"
                              Width="200" Height="50"
                              HorizontalAlignment="Left"
                              ItemsSource="{Binding PackagingTypeList}"
                              Style="{StaticResource BlueDropdownStyle}"
                              SelectionChanged="cbPackagingType_SelectionChanged"/>

                    <!-- Paramètre 1 -->
                    <TextBlock FontSize="16" HorizontalAlignment="Left" FontWeight="SemiBold" Margin="0,15,0,5" Foreground="{DynamicResource TextFifthColor}"><Run Text="Paramètre "/><Run Language="fr-fr" Text="5"/></TextBlock>
                    <ComboBox x:Name="cbCustom1"
                              Width="200" Height="50"
                              HorizontalAlignment="Left"
                              ItemsSource="{Binding CustomList1}"
                              Style="{StaticResource BlueDropdownStyle}"
                              SelectionChanged="cbCustom1_SelectionChanged"/>

                    <!-- Paramètre 2 -->
                    <TextBlock FontSize="16" HorizontalAlignment="Left" FontWeight="SemiBold" Margin="0,15,0,5" Foreground="{DynamicResource TextFifthColor}"><Run Text="Paramètre "/><Run Language="fr-fr" Text="6"/></TextBlock>
                    <ComboBox x:Name="cbCustom2"
                              Width="200" Height="50"
                              HorizontalAlignment="Left"
                              ItemsSource="{Binding CustomList2}"
                              Style="{StaticResource BlueDropdownStyle}"
                              SelectionChanged="cbCustom2_SelectionChanged"/>
                </StackPanel>

                <!-- Boutons -->
                <StackPanel Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                    <Button Content="Précédent"
                            Style="{StaticResource SquareButtonStyle}"
                            Background="#404040"
                            Width="125" Height="40"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Margin="0, 0, 200, 0"
                            HorizontalAlignment="Left"
                            Click="GoBack_Click"/>
                    <Button x:Name="btnExtract"
                            Content="Extraire"
                            Style="{StaticResource SquareButtonStyle}"
                            Width="125" Height="40"
                            FontSize="14"
                            FontWeight="SemiBold"
                            HorizontalAlignment="Right"
                            Click="Extract_Click"
                            IsEnabled="False"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
